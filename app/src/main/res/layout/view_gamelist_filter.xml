<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.nc.nc_android.custom_view.ClearableEditText
        android:id="@+id/cetName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        custom:hint="Название игры"
        custom:textColor="@color/secondaryTextColor"
        custom:textSize="16sp" />

    <com.nc.nc_android.custom_view.ClearableEditText
        android:id="@+id/cetAuthor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        custom:hint="Организатор"
        custom:textColor="@color/secondaryTextColor"
        custom:textSize="16sp" />


</LinearLayout>